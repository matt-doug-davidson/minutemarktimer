{
  "name": "flogo-minutemarktimer",
  "type": "flogo:trigger",
  "version": "0.0.1",
  "title": "Minute Mark Timer",
  "description": "Simple Minute Mark Timer trigger",
  "homepage": "https://github.com/project-flogo/contrib/tree/master/trigger/timer",
  "handler": {
    "settings": [
      {
        "name": "interval",
        "type": "string",
        "description": "Interval in minutes (must be 1, 2, 3, 4, 5, 6, 10, 12, 15, 20, 30"
      },
      {
        "name": "offset",
        "type": "string",
        "description": "Offset in minutes from the main interval"
      }
    ]
  }
}
